{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "admiral": {
      "type": "object",
      "properties": {
        "config": {
          "type": "object",
          "properties": {
            "server": {
              "type": "object",
              "properties": {
                "hostPort": {
                  "type": "string",
                  "minLength": 1,
                  "pattern": "^[^:]+:[0-9]+$",
                  "description": "Admiral server host:port (e.g., admiral-server.namespace.svc.cluster.local:8080)"
                },
                "authToken": {
                  "type": "string",
                  "minLength": 1,
                  "description": "Authentication token for Admiral server"
                }
              },
              "required": ["hostPort", "authToken"]
            }
          },
          "required": ["server"]
        }
      },
      "required": ["config"]
    }
  },
  "required": ["admiral"]
}